{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "importHelpers": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/",
    "node_modules/",
    "build/",
    "reports/",
    "coverage/"
  ]
}