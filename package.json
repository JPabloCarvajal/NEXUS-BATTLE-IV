{
  "name": "nexus-battle-iv",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npx ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:debug": "npx ts-node-dev --inspect --respawn src/index.ts",
    "dev:local": "npm run dev -- --env-file .env.local",
    "dev:deploy": "npx ts-node-dev --respawn --transpile-only app/src/index.ts",
    "start": "node build/src/index.js",
    "prebuild": "npm run clean && npm run lint && npm run test",
    "build": "npm run build:compile",
    "build:compile": "tsc --build tsconfig.build.json",
    "start:prod": "cross-env NODE_ENV=production npm start",
    "start:pm2": "pm2 start ecosystem.config.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "lint": "npx eslint . --fix",
    "lint:check": "npx eslint .",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "audit": "npm audit --audit-level=moderate",
    "security": "npm run audit && npm run dep-check",
    "dep-check": "depcheck --ignores='@types/*,jest,typescript'",
    "complexity": "plato -r -d reports/complexity build/src/",
    "clean": "rimraf build coverage reports",
    "docker:build": "docker build -t camanrofo34/nexus-battle-iv:latest .",
    "docker:run": "docker run --rm -p 3000:3000 --env-file .env.deploy camanrofo34/nexus-battle-iv:latest",
    "docker:deploy": "docker build -t camanrofo34/nexus-battle-iv:latest . && docker push camanrofo34/nexus-battle-iv:latest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mersenne-twister": "^1.1.0",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mersenne-twister": "^1.1.7",
    "@types/socket.io": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "artillery": "^2.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "pm2": "^5.3.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "terser": "^5.19.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
